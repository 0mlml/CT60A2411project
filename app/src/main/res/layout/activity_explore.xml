<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/exploreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Explore new municipalities:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/buttonHot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Hottest"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintEnd_toStartOf="@+id/buttonPopulationUp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exploreText" />

    <Button
        android:id="@+id/buttonCold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Coldest"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintEnd_toStartOf="@+id/buttonPopulationDown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonHot" />

    <Button
        android:id="@+id/buttonPopulationUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Most population"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintEnd_toStartOf="@+id/buttonImmigration"
        app:layout_constraintStart_toEndOf="@+id/buttonHot"
        app:layout_constraintTop_toBottomOf="@+id/exploreText" />

    <Button
        android:id="@+id/buttonPopulationDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Least population"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintEnd_toStartOf="@+id/buttonEmigration"
        app:layout_constraintStart_toEndOf="@+id/buttonCold"
        app:layout_constraintTop_toBottomOf="@+id/buttonPopulationUp" />

    <Button
        android:id="@+id/buttonImmigration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Most immigrated"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonPopulationUp"
        app:layout_constraintTop_toBottomOf="@+id/exploreText" />

    <Button
        android:id="@+id/buttonEmigration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Most emigrated"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonPopulationDown"
        app:layout_constraintTop_toBottomOf="@+id/buttonImmigration" />

    <ListView
        android:id="@+id/listViewExplore"
        android:layout_width="409dp"
        android:layout_height="320dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonMostNorth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="10dp"
        android:text="Northest"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintBottom_toTopOf="@+id/buttonMostSouth"
        app:layout_constraintEnd_toStartOf="@+id/buttonMostDeaths"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCold" />

    <Button
        android:id="@+id/buttonMostDeaths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_marginBottom="10dp"
        android:text="Most deaths"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintBottom_toTopOf="@+id/buttonMostBirths"
        app:layout_constraintEnd_toStartOf="@+id/buttonMostMarriages"
        app:layout_constraintStart_toEndOf="@+id/buttonMostNorth"
        app:layout_constraintTop_toBottomOf="@+id/buttonPopulationDown" />

    <Button
        android:id="@+id/buttonMostMarriages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_marginBottom="10dp"
        android:text="Most marriages"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintBottom_toTopOf="@+id/buttonMostBirths"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonMostDeaths"
        app:layout_constraintTop_toBottomOf="@+id/buttonEmigration" />

    <Button
        android:id="@+id/buttonMostSouth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Southest"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintBottom_toTopOf="@+id/listViewExplore"
        app:layout_constraintEnd_toStartOf="@+id/buttonMostBirths"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonMostBirths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Most births"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintBottom_toTopOf="@+id/listViewExplore"
        app:layout_constraintEnd_toStartOf="@+id/buttonMostDevorces"
        app:layout_constraintStart_toEndOf="@+id/buttonMostSouth" />

    <Button
        android:id="@+id/buttonMostDevorces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Most devorces"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintBottom_toTopOf="@+id/listViewExplore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonMostBirths" />
</androidx.constraintlayout.widget.ConstraintLayout>