<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ModernDashboard">

        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.search.SearchActivity" />

        <activity android:name=".details.CityDetailsActivity" />

        <activity android:name=".ui.explore.ExploreActivity" />

        <activity android:name=".ui.minigame.MinigameSplashActivity" />

        <activity android:name=".ui.compare.CompareActivity" />

        <activity android:name=".ui.minigame.impl.QuizActivity" />
        <activity android:name=".ui.minigame.impl.QuizResultActivity" />

        <activity android:name=".ui.minigame.impl.HigherLowerActivity" />

        <activity android:name=".ui.minigame.impl.GuessTheCityActivity" />

        <activity android:name=".ui.minigame.impl.FlashCardsActivity" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest>